---
siteTitle: 11ty & Notion Minimal Data Test
---
<!doctype html>
<html lang="en">
 <head>
  <meta charset="utf-8">
  <title>{{ siteTitle }}</title>
  <link rel="stylesheet" href="https://cdn.rawgit.com/kimeiga/bahunya/css/bahunya-0.1.3.css"/>
  <style>
    .font-bold {
      font-weight: 700;
    }
    .italic {
      font-style: italic;
    }

    .underline {
      text-decoration: underline;
    }

    .code {
      font-family: monospace;
    }

    .yellow {
      color: yellow;
      }
    .gray {
      color: gray;
      }
    .brown {
      color: brown;
      }
    .orange {
      color: orange;
      }
    .green {
      color: green;
      }
    .blue {
      color: blue;
      }
    .purple {
      color: purple;
      }
    .red {
      color: red;
      }

  </style>
 </head>
 <body>
 	<blockquote>
     Articles: {{ articles.length | safe }}
  </blockquote>

  {% for article in articles %}
  <section>
    <h2>Title: {{ article.title }}</h2>
    <h3>Subtitle: {{ article.subtitle }}</h3>
    <blockquote><span>Date: {{ article.authors }}</span> - <span>Authors: {{ article.date }}</span></blockquote>
    
    {% for block in article.body %}
      {% switch block.block_type %}

        {% case "heading_1" %}
          <h4>{{- block.parsedText | safe -}}</h4>
        {% case "heading_2" %}
          <h5>{{- block.parsedText | safe -}}</h5>
        {% case "heading_3" %}
          <h6>{{- block.parsedText | safe -}}</h6>
        {% case "paragraph" %}
          <p>{% for elem in block.parsedText %}
          {{- elem | safe -}}
          {% endfor %}</p>
        {% default %}
          <em>(Default Case - Type: {{- block.block_type -}})</em>
          {% if block.block_type == "bulleted_list_item" %}
          <ul>
            <li>{% for elem in block.parsedText %}
                  {{- elem | safe -}}
                  {% endfor %}</li>
          </ul>
          {% else %}
          {% for elem in block.parsedText %}
                  {{- elem | safe -}}
                  {% endfor %}
          {% endif %}
          
      {% endswitch %}
    {% endfor %}

  </section>
  <hr>
  {% endfor %}

 </body>
</html>
